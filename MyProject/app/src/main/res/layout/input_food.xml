<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/food">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#FBF2EF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/photo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chooseImage"
        android:onClick="getImageFromGalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Choose Image"
        android:backgroundTint="#F79F81"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/chooseImage">


        <EditText
            android:id="@+id/foodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Food Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/foodCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Food Count"
            android:textColor="@color/black"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/foodEval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Food Evaluation"
            android:textColor="@color/black"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/calorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Food Calories"
            android:textColor="@color/black"
            android:inputType="numberSigned" />


        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:timePickerMode="spinner"
            />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="날짜"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#F79F81"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="horizontal"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#FBEFEF"
            android:fontFamily="@font/kofinbold"
            android:text="저장"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:backgroundTint="#FBEFEF"
            android:fontFamily="@font/kofinbold"
            android:text="닫기"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/google_map"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"

            android:backgroundTint="#FBEFEF"
            android:fontFamily="@font/kofinbold"
            android:text="지도"
            android:textColor="@color/black"
            android:textSize="20dp" />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>